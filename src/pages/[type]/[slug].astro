---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL, ESO_API_URL } from "@/consts";
import Footer from "@/components/Footer.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import Meta from "@/components/Meta.astro";
import { md2html, formatDateTime } from "@/utils";

const { type, slug } = Astro.params;

/** 文章 */
async function getArticle(slug: string) {
  const query = new URLSearchParams();
  query.set("pagination[pageSize]", "1");
  query.set("pagination[page]", "1");
  query.set("filters[slug][$eq]", slug!);
  query.set("filters[type][slug][$eq]", type!);
  query.set("populate", "*");

  const response = await fetch(`${ESO_API_URL}/api/articles?${query}`);
  const result = await response.json();

  return result?.data[0];
}

const data = await getArticle(slug!);

if (data == null) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

function createTime(datatime: any) {
  const formated = formatDateTime(datatime);
  return `<time class="text-gray-900 text-sm mr-4" datetime="${datatime}" title="${datatime}">${formated}</time>`;
}

const meta = [
  {
    name: "分类",
    content: data.attributes.type.data
      ? `<a href="/${data.attributes.type.data.attributes.slug}">${data.attributes.type.data.attributes.name}</a>`
      : "",
  },
  {
    name: "标签",
    content: data.attributes.tags.data
      .map((tag: any) => tag.attributes.name)
      .join("<br/>"),
  },
  { name: "发布时间", content: createTime(data.attributes.publishedAt) },
  { name: "最后更新", content: createTime(data.attributes.updatedAt) },
];
---

<html lang="zh-CN">
  <head>
    <HeaderMeta
      title={`${data.attributes.title} - 文章 - ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />
    <main class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-4">
      <article class="p-6 md:col-span-3">
        <div class="markdown-body">
          <h1>{data.attributes.title}</h1>
          {
            data.attributes.thumb && (
              <img
                class="my-4 shadow-gray-300"
                src={data.attributes.thumb}
                alt=""
              />
            )
          }
          <Fragment set:html={md2html(data.attributes.content)} />
        </div>
      </article>
      <aside class="py-6 md:col-span-1">
        <Meta title="文章" meta={meta} />
      </aside>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
