---
import { ESO_API_URL } from "@/consts";
import ListLayout from "@/layouts/ListLayout.astro";
import { md2html } from "@/utils";

let page = Astro.url.searchParams.get("page") || "1";
const q = Astro.url.searchParams.get("q") || "";

if (!/^\d+$/.test(page)) {
  page = "1";
}

const query = new URLSearchParams();
query.set("pagination[pageSize]", "100");
query.set("pagination[page]", page);
query.set("sort[0]", "slug:asc");
// query.set("populate", "*");
if (q) query.set("filters[name][$containsi]", q);

const response = await fetch(`${ESO_API_URL}/api/quests?${query}`);
const { data, meta } = await response.json();
---

<ListLayout
  name="任务列表"
  nameEn="Quests"
  description={`上古卷轴OL目前一共有 ${meta.pagination.total} 个任务。`}
  pagination={meta.pagination}
>
  <form id="form-build" action="/quest/list" class="float-right">
    <input
      type="search"
      name="q"
      id="q"
      autocomplete="off"
      placeholder="搜索..."
      value={q}
      class="filter block w-64 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
    />
  </form>
  <p>
    上古卷轴OL目前一共有 {meta.pagination.total} 个<a href="/quest">任务</a>。
  </p>
  <ul>
    {
      data.map((x: any) => (
        <li>
          <a href={`/quest/${x.attributes.slug}`}>{x.attributes.name}</a>
          <small class="text-gray-500">({x.attributes.nameEn})</small>
        </li>
      ))
    }
  </ul>
</ListLayout>
